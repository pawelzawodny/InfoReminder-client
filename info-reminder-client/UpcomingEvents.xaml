<Window x:Class="InfoReminder.Client.UpcomingEventsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:InfoReminder.Client.ViewModels"
        Title="Window1" Height="300" Width="300">
    <Window.Resources>
        <vm:UpcomingEventsViewModel x:Key="upcomingEvents"/>
    </Window.Resources>
    <Window.DataContext>
        <Binding Source="{StaticResource upcomingEvents}" />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition>
            
            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox Grid.Column="0" Grid.Row="0" ItemsSource="{Binding Path=UpcomingEvents}">

        </ListBox>
        
        <Label Name="Name" Grid.Column="0" Grid.Row="1" Content="{Binding Path=Event.Description}"></Label>
    </Grid>
</Window>
